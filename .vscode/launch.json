
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Electron: Main",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "runtimeArgs": [
                "--remote-debugging-port=9223",
                "."
            ]
        },
        {
            "name": "Electron: Renderer",
            "type": "chrome",
            "request": "attach",
            "port": 9223,
            "webRoot": "${workspaceRoot}/src/log.js",
            "timeout": 30000
        },
        {
            "name": "Electron: Mocha",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "outputCapture": "std",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/mocha",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/mocha"
            },
            "runtimeArgs": [
                "${workspaceRoot}/tests",
                "--recursive",
            ]
        }
    ],
    "compounds": [
        {
            "name": "Electron: All",
            "configurations": [
                "Electron: Main",
                "Electron: Renderer"
            ]
        }
    ]
}	  